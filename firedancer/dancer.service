[Unit]
Description=Firedancer Validator
After=network.target

[Service]
User=root
Type=simple
Restart=always
RestartSec=1
ExecStart=/bin/bash -c ' \
/root/firedancer/build/native/gcc/bin/fdctl configure init all --config /root/solana/dance_config.toml && \
/root/firedancer/build/native/gcc/bin/fdctl run --config /root/solana/dance_config.toml'

ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
[Install]
WantedBy=multi-user.target
